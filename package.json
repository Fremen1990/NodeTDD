{
  "name": "node-tdd",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "client": "npx http-server -c-1 -p 8080 -P http://localhost:3000",
    "startAll": "concurrently \"cross-env NODE_ENV=development npm run dev\" \"cd client && npm run client\"",
    "start": "cross-env NODE_ENV=dev node index.js",
    "dev": "cross-env NODE_ENV=dev nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --watchAll --verbose",
    "posttest": "cross-env NODE_ENV=test node test-cleanup",
    "lint": "eslint . ",
    "lint-fix": "eslint . --fix",
    "test:staging": "cross-env NODE_ENV=staging jest --all . --runInBand --forceExit",
    "migrate:test": "cross-env NODE_ENV=staging sequelize-cli db:migrate",
    "pretest:staging": "npm run migrate:test"
  },
  "author": "Tomasz Stanisz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.8",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "file-type": "16.5.3",
    "i18next": "^21.9.1",
    "i18next-fs-backend": "^1.1.5",
    "i18next-http-middleware": "^3.2.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.8",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.21.6",
    "sequelize-cli": "^6.5.1",
    "sqlite3": "^5.0.11"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "jest-watch-typeahead": "^2.2.0",
    "prettier": "^2.7.1",
    "smtp-server": "^3.11.0",
    "supertest": "^6.2.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "eqeqeq": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "endOfLine": "lf"
  },
  "jest": {
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/config/"
    ],
    "verbose": true,
    "testTimeout": 5000
  }
}
