{
  "name": "node-tdd",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "client": "npx http-server -c-1 -p 8080 -P http://localhost:3000",
    "startAll": "concurrently \"cross-env NODE_ENV=dev npm run dev\" \"cd client && npm run client\"",
    "start": "cross-env NODE_ENV=dev node index.js",
    "dev": "cross-env NODE_ENV=dev nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --watchAll",
    "lint": "eslint . ",
    "lint-fix": "eslint . --fix"
  },
  "author": "Tomasz Stanisz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.8",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "sequelize": "^6.21.6",
    "sqlite3": "^5.0.11"
  },
  "devDependencies": {
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "eqeqeq": "warn"
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "endOfLine": "lf"
  }
}
